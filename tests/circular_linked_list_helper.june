// output: -2

struct Node {
    data: i64
    next: shared Node?
}

fun builder() -> shared Node {
    mut node3 = new shared Node(data: 3, next: none)
    let node2 = new shared Node(data: 2, next: node3)
    let node1 = new shared Node(data: 1, next: node2)
    node3.next = node1

    return node2
}

fun main() {
    mut curr: shared Node? = builder()
    let end = curr

    // println(curr.data)
    mut total = curr.data

    while curr.next != end {
        curr = curr.next
        total -= curr.data
    }

    println(total)
}